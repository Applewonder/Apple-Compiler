{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-7 生成活动文件",
            "command": "/usr/bin/gcc-7",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.c",
                "syntax.tab.c",
                "ast.c",
                "data_hash.c",
                "generate_ir_sym.c",
                "generate_ir.c",
                "ir_code.c",
                "-ll",
                "-ly",
                "-o",
                "print_ir"
                //"-fsanitize=address"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}